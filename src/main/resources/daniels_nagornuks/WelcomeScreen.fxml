<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" minHeight="600.0" minWidth="1000.0" prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="daniels_nagornuks.WelcomeScreenController">
   <children>
      <MenuBar VBox.vgrow="NEVER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#loadImage" text="Load" />
                  <MenuItem mnemonicParsing="false" onAction="#exitApplication" text="Exit" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Label fx:id="welcomeLabel" text="Welcome to the blood cell analyzer app. Click on the buttom below to load an image of blood cells!">
         <VBox.margin>
            <Insets top="350.0" />
         </VBox.margin>
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Button mnemonicParsing="false" onAction="#loadImage" text="Load Image">
         <VBox.margin>
            <Insets bottom="200.0" top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
