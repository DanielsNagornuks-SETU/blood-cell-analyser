<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" minHeight="900.0" minWidth="1600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="daniels_nagornuks.MainViewController">
   <children>
      <MenuBar VBox.vgrow="NEVER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#loadImage" text="Load" />
                  <MenuItem mnemonicParsing="false" onAction="#clearImage" text="Clear" />
                  <MenuItem mnemonicParsing="false" onAction="#exitApplication" text="Exit" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Pane fx:id="pane" cacheShape="false" centerShape="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" pickOnBounds="false" scaleShape="false">
         <children>
            <ImageView fx:id="imageView" cache="true" fitHeight="700.0" fitWidth="1600.0">
               <viewport>
                  <Rectangle2D />
               </viewport>
            </ImageView>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Pane>
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="1200.0">
         <children>
            <CheckBox fx:id="originalImageCheckBox" mnemonicParsing="false" onAction="#displayImage" selected="true" text="Original Image">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </CheckBox>
            <Button mnemonicParsing="false" onAction="#adjustImage" text="Make Adjustments">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#setBloodCellSizes" text="Set Blood Cell Sizes">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="1200.0">
         <children>
            <CheckBox fx:id="showClusterOutlinesCheckBox" mnemonicParsing="false" onAction="#updatePane" selected="true" text="Show Outlines">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </CheckBox>
            <CheckBox fx:id="showClustersNumberedCheckBox" mnemonicParsing="false" onAction="#updatePane" selected="true" text="Number Clusters">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </CheckBox>
            <CheckBox fx:id="showTooltipsCheckBox" mnemonicParsing="false" onAction="#updatePane" selected="true" text="Enable Tooltips">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </CheckBox>
         </children>
      </HBox>
   </children>
</VBox>
